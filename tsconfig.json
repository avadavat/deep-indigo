{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "types": [
      "leftovers-again",
      "node"
    ],
    "outDir": "build"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "build",
    "node_modules",
    "Pokemon-Showdown"
  ]
}